{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "noImplicitThis": false,
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "strictNullChecks": false
    },
    "include": [
        "./src/**/*"
    ]
}
